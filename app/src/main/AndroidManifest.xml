<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="accountbook.smile.com.accountbook">

    <application
        android:name="com.smile.accountbook.activity.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="design_width"
            android:value="1080" />
        <meta-data
            android:name="design_height"
            android:value="1920" />

        <activity android:name="com.smile.accountbook.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.smile.accountbook.db.BillProvider"
            android:authorities="com.smile.accountbook.provider.BillProvider" />

        <activity android:name="com.smile.accountbook.activity.AddBillActivity"  android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
